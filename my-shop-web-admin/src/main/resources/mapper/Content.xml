<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanleichen.my.shop.web.admin.dao.ContentDao">
    <sql id="ContentColumns">
        a.id,
        a.category_id AS categoryId,
        a.title,
        a.sub_title AS subTitle,
        a.title_desc AS titleDesc,
        a.url,
        a.pic,
        a.pic2,
        a.content,
        a.created,
        a.updated
    </sql>
    <select id="selectAll" resultType="Content">
        SELECT
        <include refid="ContentColumns"></include>
        FROM
        tb_content AS a
    </select>
    <insert id="insert">
        INSERT INTO `tb_content` (
          `category_id`,
          `title`,
          `sub_title`,
          `title_desc`,
          `url`,
          `pic`,
          `pic2`,
          `content`,
          `created`,
          `updated`
        )
        VALUES
        (
            #{categoryId},
            #{title},
            #{subTitle},
            #{titleDesc},
            #{url},
            #{pic},
            #{pic2},
            #{content},
            #{created},
            #{updated}
        )
    </insert>
    <delete id="delete">
        DELETE
        FROM
          tb_content
        WHERE
          id = #{id}
    </delete>
    <select id="getContentById" resultType="Content">
        SELECT
        <include refid="ContentColumns"></include>
        FROM
        tb_content AS a
        WHERE
        id = #{id}
    </select>
    <update id="update">
        UPDATE
          `tb_content`
        SET
          `category_id` = #{categoryId},
          `title` = #{title},
          `sub_title` = #{subTitle},
          `title_desc` = #{titleDesc},
          `url` = #{url},
          `pic` = #{pic},
          `pic2` = #{pic2},
          `content` = #{content},
          `created` = #{created},
          `updated` = #{updated}
        WHERE `id` = #{id}
    </update>

    <delete id="deleteMulti">
        DELETE  FROM tb_content
        WHERE id IN
        <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </delete>
    <select id="getPage" resultType="Content" parameterType="java.util.Map">
        SELECT
        <include refid="ContentColumns"></include>
        FROM
        tb_content AS a
        <where>
            <if test="content.title != null and content.title != ''">
                AND title LIKE CONCAT("%", #{content.title}, "%")
            </if>
            <if test="content.subTitle != null and content.subTitle != ''">
                AND sub_title LIKE CONCAT("%", #{content.subTitle}, "%")
            </if>
            <if test="content.titleDesc != null and content.titleDesc != ''">
                AND title_desc LIKE CONCAT("%", #{content.titleDesc}, "%")
            </if>
        </where>
        LIMIT #{start}, #{length}
    </select>
    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM tb_content
        <where>
            <if test="title != null and title != ''">
                AND title LIKE CONCAT("%", #{title}, "%")
            </if>
            <if test="subTitle != null and subTitle != ''">
                AND sub_title LIKE CONCAT("%", #{subTitle}, "%")
            </if>
            <if test="titleDesc != null and titleDesc != ''">
                AND title_desc LIKE CONCAT("%", #{titleDesc}, "%")
            </if>
        </where>
    </select>
</mapper>